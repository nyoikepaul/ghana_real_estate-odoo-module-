                                <i class="fa fa-search"></i> Search Property
                            </a>
                        </div>
                    </div>
                </nav>
            </section>

            <!-- PREMIUM HERO SECTION -->
            <section id="premium-hero" class="premium-hero">
                <div class="hero-background">
                    <div class="hero-overlay"></div>
                </div>
                <div class="container">
                    <div class="hero-content">
                        <h1 class="hero-title">
                            <span class="hero-title-line">Find Your Dream</span>
                            <span class="hero-title-highlight">Property in Ghana</span>
                        </h1>
                        <p class="hero-subtitle">
                            Discover premium properties across Ghana's most sought-after locations
                        </p>
                        
                        <!-- PREMIUM PROPERTY SEARCH -->
                        <div class="premium-search-box">
                            <div class="search-tabs">
                                <button class="search-tab active" data-tab="sale">Buy</button>
                                <button class="search-tab" data-tab="rent">Rent</button>
                                <button class="search-tab" data-tab="lease">Lease</button>
                            </div>
                            <form class="search-form" action="/properties" method="get">
                                <div class="search-fields">
                                    <div class="search-field">
                                        <i class="fa fa-map-marker"></i>
                                        <input type="text" name="location" placeholder="Enter location..." class="form-control" id="location-input"/>
                                    </div>
                                    <div class="search-field">
                                        <i class="fa fa-home"></i>
                                        <select name="property_type" class="form-control">
                                            <option value="">Property Type</option>
                                            <t t-foreach="property_types or []" t-as="pt">
                                                <option t-att-value="pt.id" t-esc="pt.name"/>
                                            </t>
                                        </select>
                                    </div>
                                    <div class="search-field">
                                        <i class="fa fa-money"></i>
                                        <select name="price_range" class="form-control">
                                            <option value="">Price Range</option>
                                            <option value="0-200000">‚Çµ0 - ‚Çµ200,000</option>
                                            <option value="200000-500000">‚Çµ200,000 - ‚Çµ500,000</option>
                                            <option value="500000-1000000">‚Çµ500,000 - ‚Çµ1,000,000</option>
                                            <option value="1000000-5000000">‚Çµ1,000,000+</option>
                                        </select>
                                    </div>
                                    <div class="search-field search-btn-field">
                                        <button type="submit" class="btn btn-primary btn-block">
                                            <i class="fa fa-search"></i> Search
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        
                        <!-- Quick Stats -->
                        <div class="hero-stats">
                            <div class="stat-item">
                                <span class="stat-number" t-esc="stats.get('properties_for_sale', 0)"></span>
                                <span class="stat-label">Properties for Sale</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number" t-esc="stats.get('properties_for_rent', 0)"></span>
                                <span class="stat-label">Properties for Rent</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number" t-esc="stats.get('happy_clients', 0)"></span>
                                <span class="stat-label">Happy Clients</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number" t-esc="stats.get('years_experience', 0)"></span>
                                <span class="stat-label">Years Experience</span>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- FEATURED PROPERTIES SECTION -->
            <section id="featured-properties" class="section premium-section">
                <div class="container">
                    <div class="section-header text-center">
                        <span class="section-tag">Featured Listings</span>
                        <h2 class="section-title">Premium Properties</h2>
                        <p class="section-subtitle">Handpicked properties that offer the best value in Ghana</p>
                    </div>
                    
                    <div class="properties-grid">
                        <t t-foreach="featured_properties or []" t-as="property">
                            <div class="property-card">
                                <div class="property-image">
                                    <t t-if="property.image_ids">
                                        <img t-att-src="'/web/image/ghana_real_estate.property.image/%s/image' % property.image_ids[0].id" 
                                             class="img-fluid" t-att-alt="property.name"/>
                                    </t>
                                    <t t-else="">
                                        <div class="no-image-placeholder">
                                            <i class="fa fa-home"></i>
                                        </div>
                                    </t>
                                    <div class="property-badge">
                                        <span t-att-class="'badge badge-%s' % ('success' if property.transaction_type == 'sale' else 'info')">
                                            <t t-if="property.transaction_type == 'sale'">For Sale</t>
                                            <t t-if="property.transaction_type == 'rent'">For Rent</t>
                                            <t t-if="property.transaction_type == 'lease'">For Lease</t>
                                        </span>
                                    </div>
                                    <div class="property-actions">
                                        <button class="action-btn" data-toggle="tooltip" title="Add to favorites">
                                            <i class="fa fa-heart"></i>
                                        </button>
                                        <button class="action-btn" data-toggle="tooltip" title="Compare">
                                            <i class="fa fa-exchange"></i>
                                        </button>
                                        <button class="action-btn" data-toggle="tooltip" title="Share">
                                            <i class="fa fa-share-alt"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="property-content">
                                    <div class="property-price">
                                        <span t-esc="property.display_price"/>
                                        <t t-if="property.transaction_type == 'rent'">
                                            <span class="price-period">/month</span>
                                        </t>
                                    </div>
                                    <h3 class="property-title">
                                        <a t-att-href="'/property/%d' % property.id" t-esc="property.name"/>
                                    </h3>
                                    <div class="property-location">
                                        <i class="fa fa-map-marker"></i>
                                        <span t-esc="property.city"/>, <span t-esc="property.location_id.name"/>
                                    </div>
                                    <div class="property-features">
                                        <span class="feature">
                                            <i class="fa fa-bed"></i>
                                            <t t-esc="property.bedrooms"/> Beds
                                        </span>
                                        <span class="feature">
                                            <i class="fa fa-bath"></i>
                                            <t t-esc="property.bathrooms"/> Baths
                                        </span>
                                        <span class="feature">
                                            <i class="fa fa-expand"></i>
                                            <t t-esc="property.building_size"/> sqft
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                    
                    <div class="section-footer text-center">
                        <a href="/properties" class="btn btn-outline-primary btn-lg">
                            View All Properties <i class="fa fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </section>

            <!-- PROPERTY TYPES SECTION -->
            <section id="property-types" class="section premium-section bg-light">
                <div class="container">
                    <div class="section-header text-center">
                        <span class="section-tag">Browse Categories</span>
                        <h2 class="section-title">Property Types</h2>
                        <p class="section-subtitle">Find your perfect property type from our diverse listings</p>
                    </div>
                    
                    <div class="types-grid">
                        <t t-foreach="property_types or []" t-as="pt">
                            <a t-att-href="'/properties/type/%s' % pt.code" class="type-card">
                                <div class="type-icon">
                                    <i t-att-class="'fa %s' % pt.icon"></i>
                                </div>
                                <h3 class="type-name" t-esc="pt.name"/>
                                <span class="type-count">
                                    <t t-esc="pt.property_count"/> Properties
                                </span>
                            </a>
                        </t>
                    </div>
                </div>
            </section>

            <!-- SPOTLIGHT SECTION -->
