                            <div class="spotlight-card">
                                <div class="spotlight-image">
                                    <t t-if="property.image_ids">
                                        <img t-att-src="'/web/image/ghana_real_estate.property.image/%s/image' % property.image_ids[0].id" 
                                             class="img-fluid" t-att-alt="property.name"/>
                                    </t>
                                    <t t-else="">
                                        <div class="no-image-placeholder">
                                            <i class="fa fa-home"></i>
                                        </div>
                                    </t>
                                    <div class="spotlight-overlay">
                                        <a t-att-href="'/property/%d' % property.id" class="btn btn-light">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                                <div class="spotlight-content">
                                    <div class="property-price text-white">
                                        <span t-esc="property.display_price"/>
                                    </div>
                                    <h3 class="property-title text-white">
                                        <a t-att-href="'/property/%d' % property.id" t-esc="property.name"/>
                                    </h3>
                                    <div class="property-location text-light">
                                        <i class="fa fa-map-marker"></i>
                                        <span t-esc="property.city"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </section>

            <!-- LOCATIONS SECTION -->
            <section id="locations" class="section premium-section">
                <div class="container">
                    <div class="section-header text-center">
                        <span class="section-tag">Popular Locations</span>
                        <h2 class="section-title">Explore Ghana</h2>
                        <p class="section-subtitle">Properties in Ghana's most desirable regions</p>
                    </div>
                    
                    <div class="locations-grid">
                        <t t-foreach="locations[:6]" t-as="loc">
                            <a t-att-href="'/properties/location/%s' % loc.code" class="location-card">
                                <div class="location-image">
                                    <t t-if="loc.image">
                                        <img t-att-src="'/web/image/ghana_real_estate.location/%d/image' % loc.id" 
                                             class="img-fluid" t-att-alt="loc.name"/>
                                    </t>
                                    <t t-else="">
                                        <div class="location-placeholder">
                                            <i class="fa fa-map-marker"></i>
                                        </div>
                                    </t>
                                    <div class="location-overlay">
                                        <h3 class="location-name" t-esc="loc.name"/>
                                        <span class="location-count">
                                            <t t-esc="loc.property_count"/> Properties
                                        </span>
                                    </div>
                                </div>
                            </a>
                        </t>
                    </div>
                </div>
            </section>

            <!-- FEATURED AGENTS SECTION -->
            <section id="featured-agents" class="section premium-section bg-light">
                <div class="container">
                    <div class="section-header text-center">
                        <span class="section-tag">Our Team</span>
                        <h2 class="section-title">Featured Agents</h2>
                        <p class="section-subtitle">Expert agents ready to help you find your dream property</p>
                    </div>
                    
                    <div class="agents-grid">
                        <t t-foreach="featured_agents or []" t-as="agent">
                            <div class="agent-card">
                                <div class="agent-photo">
                                    <t t-if="agent.photo">
                                        <img t-att-src="'/web/image/ghana_real_estate.agent/%d/photo' % agent.id" 
                                             class="img-fluid rounded-circle" t-att-alt="agent.name"/>
                                    </t>
                                    <t t-else="">
                                        <div class="agent-placeholder">
                                            <i class="fa fa-user"></i>
                                        </div>
                                    </t>
                                </div>
                                <div class="agent-info">
                                    <h3 class="agent-name" t-esc="agent.name"/>
                                    <p class="agent-title" t-esc="agent.title"/>
                                    <div class="agent-contact">
                                        <a t-att-href="'tel:%s' % agent.phone" class="contact-link">
                                            <i class="fa fa-phone"></i>
                                        </a>
                                        <a t-att-href="'mailto:%s' % agent.email" class="contact-link">
                                            <i class="fa fa-envelope"></i>
                                        </a>
                                        <t t-if="agent.whatsapp">
                                            <a t-att-href="'https://wa.me/%s' % agent.whatsapp.replace('+', '').replace(' ', '')" 
                                               class="contact-link" target="_blank">
                                                <i class="fa fa-whatsapp"></i>
                                            </a>
                                        </t>
                                    </div>
                                    <div class="agent-stats">
                                        <span class="stat">
                                            <i class="fa fa-home"></i>
                                            <t t-esc="agent.properties_count"/> Properties
                                        </span>
                                        <span class="stat">
                                            <i class="fa fa-star"></i>
                                            <t t-esc="agent.client_rating"/> Rating
                                        </span>
                                    </div>
                                    <a t-att-href="'/agent/%d' % agent.id" class="btn btn-outline-primary btn-block">
                                        View Profile
